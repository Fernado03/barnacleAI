# Barnacle-AI Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/barnacle-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Free Maritime Data APIs Configuration
USE_REAL_MARINE_DATA=false  # Set to true to enable real APIs

# AISHub (Free registration required)
# Sign up at: https://www.aishub.net/register.php
AISHUB_USERNAME=your_aishub_username_here

# OpenWeatherMap (Free tier - 1000 calls/day)
# Sign up at: https://openweathermap.org/appid
OPENWEATHER_API_KEY=your_openweather_api_key_here

# NASA APIs (Free registration recommended but DEMO_KEY works)
# Sign up at: https://urs.earthdata.nasa.gov/users/new
NASA_API_KEY=DEMO_KEY

# Rate Limiting (Recommended for free APIs)
MARINE_API_RATE_LIMIT=30    # requests per minute
WEATHER_API_RATE_LIMIT=60   # requests per hour
CACHE_TTL_AIS=300          # 5 minutes cache for AIS data
CACHE_TTL_WEATHER=600      # 10 minutes cache for weather
CACHE_TTL_CURRENTS=1800    # 30 minutes cache for currents

# Python ML Models Configuration
PYTHON_PATH=python3
ML_MODELS_PATH=../ml-models/models

# Optional: Redis for caching (recommended for production)
# REDIS_URL=redis://localhost:6379